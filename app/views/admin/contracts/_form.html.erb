<!-- Logout Modal-->
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= form_with(url: "/admin/users/#{user.id}/contracts/#{contract&.id}", model: [:admin, contract], html: { class: "form-horizontal" }) do |form| %>
      <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= I18n.t(contract.id ? 'contracts.update_title' : 'contracts.add_title')  %></h5>
      </div>
      <div class="modal-body">
        <div class="row d-flex align-items-center mb-4">
          <%= form.label "#{I18n.t 'rooms.form_inputs.name'}", class: "control-label col-sm-1" %>
          <div class="col-sm-5">
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
          <%= link_to I18n.t('form_buttons.cancel'), admin_user_contracts_path(user_id: user.id, id: contract.id), class: 'btn btn-secondary' %>
          <%= form.submit I18n.t('form_buttons.save'), class: "btn btn-primary waves-effect waves-light ml-4" %>
      </div>
    <% end %>
  </div>
</div>