<div class="row">
  <div class="col-sm-6">
    <form action="contracts" method="get">
      <div class="input-group">
            <%= select_tag "where[status_eq]",  options_for_select(status_options, params[:where].present?  ? params[:where]["status_eq"] : ""), class: "form-control bg-light border-0 mr-2", onchange: "this.form.submit();" %>
            <%= select_tag "where[contract_type_eq]",  options_for_select(contract_type_options, params[:where].present?  ? params[:where]["contract_type_eq"] : ""), class: "form-control bg-light border-0 mr-2", onchange: "this.form.submit();" %>
            <input type="hidden" name="where[user_id_eq]" value="<%= params[:where]["user_id_eq"] %>">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-search fa-sm"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-sm-1">
    <a class="btn btn-primary ml-md-3 my-2 my-md-0" href="/admin/contracts/new">
      <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
      <%= t('form_buttons.add') %>
    </a>
  </div>
</div>
<div class="table-responsive mt-3">
  <table class="table table-hover mt-4" id="dataTable" width="100%" cellspacing="0">
      <thead class="text-center">
          <tr>
              <th><%= t('contracts.table.name') %></th>
              <th><%= t('contracts.table.type') %></th>
              <th><%= t('contracts.table.status') %></th>
              <th><%= t('contracts.table.date') %></th>
              <th><%= t('contracts.table.salary') %></th>
              <th><%= t('contracts.table.description') %></th>
              <th><%= t('contracts.table.action') %></th>
          </tr>
      </thead>
      <tbody class="text-center" id="allHolidays">
        <%= render @contracts %>
        <%= render 'partials/blank_table', object: @contracts %>
      </tbody>
  </table>
  <%= will_paginate @contracts %>
</div>