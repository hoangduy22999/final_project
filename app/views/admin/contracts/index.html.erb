<div class="row">
  <div class="col-sm-6">
    <form action="contracts" method="get">
      <div class="input-group">
            <%= select_tag "where[status_eq]",  options_for_select(status_options, params[:where].present?  ? params[:where]["status_eq"] : ""), class: "form-control bg-light border-0 mr-4", onchange: "this.form.submit();" %>
            <%= select_tag "where[contract_type_eq]",  options_for_select(contract_type_options, params[:where].present?  ? params[:where]["contract_type_eq"] : ""), class: "form-control bg-light border-0 mr-4", onchange: "this.form.submit();" %>
            <input type="hidden" name="where[user_id_eq]" value="<%= @contracts.first&.user_id %>">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-search fa-sm"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-sm-1">
    <button class="btn btn-primary ml-md-3 my-2 my-md-0" href="#" data-toggle="modal" data-target="#holidayForm" style="width: 100px;">
      <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
      Add
    </button>
  </div>
</div>
<div class="table-responsive mt-3">
  <table class="table table-hover mt-4" id="dataTable" width="100%" cellspacing="0">
      <thead class="text-center">
          <tr>
              <th>#</th>
              <th>Name</th>
              <th>Status</th>
              <th>Date</th>
              <th>Salary</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody class="text-center" id="allHolidays">
        <%= render @contracts %>
        <%= render 'partials/blank_table', object: @contracts %>
      </tbody>
  </table>
  <%= will_paginate @contracts %>
</div>