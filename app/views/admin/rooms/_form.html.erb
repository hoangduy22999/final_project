<%= form_with(model: [:admin, room], html: { class: "form-horizontal" }) do |form| %>
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <i><b>Room Setting</b></i>
      <hr class="hr" />
      <div class="row d-flex align-items-center mb-4">
        <%= form.label "Name:", class: "control-label col-sm-1" %>
        <div class="col-sm-5 align-items-center">
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <%= form.label "Description:", class: "control-label col-sm-1" %>
        <div class="col-sm-5">
          <%= form.text_field :description, class: "form-control" %>
        </div>
      </div>

      <div class="row d-flex align-items-center mb-4">
        <%= form.label "start_at:", class: "control-label col-sm-1" %>
        <div class="col-sm-2 align-items-center">
          <%= form.time_field :start_at, { class: "form-control", step: "900" } %>
        </div>
        <%= form.label "end_at:", class: "control-label col-sm-1" %>
        <div class="col-sm-2">
          <%= form.time_field :end_at, { class: "form-control", step: "900" } %>
        </div>

        <%= form.label "rest_days:", class: "control-label col-sm-1" %>
        <div class="col-sm-5 align-items-center">
          <%= form.select :rest_day, days_of_week_for_select(room), {}, { class: "form-control", id: "multiple-checkboxes", multiple: "multiple" } %>  
        </div>
      </div>

      <div class="row d-flex align-items-center mb-4">
        <%= form.label "status:", class: "control-label col-sm-1" %>
        <div class="col-sm-2 align-items-center">
          <%= form.select :status, status_room_options, {}, { class: "form-control"} %>
        </div>

        <%= form.label "capacity:", class: "control-label col-sm-1" %>
        <div class="col-sm-2 align-items-center">
          <%= form.number_field :capacity, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <%= form.submit "Save", class: "btn btn-primary waves-effect waves-light ml-4" %>
      </div>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $('#multiple-checkboxes').multiselect({
      includeSelectAllOption: true,
    });
  });
</script>