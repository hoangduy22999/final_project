<tr class="text-center">
  <td><%= room.name %></td>
  <td><%= room.description %></td>
  <td><%= room.capacity  %></td>
  <td><%= room.start_at.strftime("%I:%M %p") %></td>
  <td><%= room.end_at.strftime("%I:%M %p") %></td>
  <td><span style="color: <%= room.color %>"><%= room.color %></span></td>
  <td><%= room.status.titleize %></td>
  <td>
      <a class="actionLink mr-3" title="Edit" data-toggle="modal" data-target="#updateRoom<%= room.id %>"><i class="fa-regular fa-pen-to-square text-success"></i></a>
      <a href="/admin/rooms/<%= room.id %>" class="actionLink" title="Remove" data-confirm="Are you want to delete this room?" data-method="delete">
        <i class="fa-solid fa-trash text-danger"></i>
      </a>
  </td>

  <%= render "form", room: room %>
</tr>