<%= form_with(model: [:admin, time_sheet], html: { class: "form-horizontal" }) do |form| %>
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <i><b>Keeping Time</b></i>
      <hr class="hr" />
      <div class="row d-flex align-items-center mb-4">
        <%= form.label "User:", class: "control-label col-sm-1" %>
        <div class="col-sm-5 align-items-center">
          <%= form.text_field :name, value: time_sheet.user.full_name, class: "form-control" , disabled: true %>
        </div>
        <%= form.label "Deparment:", class: "control-label col-sm-1" %>
        <div class="col-sm-5">
          <%= form.text_field :deparment, value: time_sheet.user.department.name, class: "form-control" , disabled: true %>
        </div>
      </div>

      <div class="row d-flex align-items-center mb-4">
        <%= form.label "keeping_time:", class: "control-label col-sm-1" %>
        <div class="col-sm-5 align-items-center">
          <%= form.datetime_field :keeping_time, class: "form-control"%>
        </div>
        <%= form.label "keeping_type:", class: "control-label col-sm-1" %>
        <div class="col-sm-5">
          <%= form.text_field :keeping_type, class: "form-control" , disabled: true %>
        </div>
      </div>

      <div class="row">
        <%= form.submit "Save", class: "btn btn-primary waves-effect waves-light ml-4" %>
      </div>
    </div>
  </div>
<% end %>