<!-- Modal -->
<div class="modal fade" id="newTimeSheetForm" tabindex="-1" role="dialog" aria-labelledby="newTimeSheetFormLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newTimeSheetFormLabel"><%= t('time_sheets.dashboard_name') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: [:admin, time_sheet], html: { class: "form-horizontal", name: "newTimeSheetFormLabel", id: "newForm" }) do |form| %>
          <div class="row justify-content-center">
            <div class="col-sm-10">
              <div class="row d-flex align-items-center mb-4">
                <%= t("time_sheets.form_inputs.user") %>
                <div class="col-sm-12 mt-2">
                  <%= form.text_field :user, value: time_sheet&.user&.full_name, class: "form-control"%>
                </div>
              </div>

              <div class="row d-flex align-items-center mb-4">
                <%= t("time_sheets.form_inputs.start_at") %>
                <div class="col-sm-12 mt-2">
                  <%= form.datetime_field :start_at, class: "form-control"%>
                </div>
              </div>

              <div class="row d-flex align-items-center mb-4">
                <%= t("time_sheets.form_inputs.end_at") %>
                <div class="col-sm-12 mt-2">
                  <%= form.datetime_field :end_at, class: "form-control"%>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button id="closeForm" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit "Save", class: "btn btn-primary col-sm-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>