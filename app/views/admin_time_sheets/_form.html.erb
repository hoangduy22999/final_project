<%= form_with(model: time_sheet, html: { class: "form-horizontal" }) do |form| %>
  <div class="row d-flex align-items-center mb-4">
    <%= form.label "Date:", class: "control-label col-sm-1" %>
    <div class="col-sm-5">
      <%= form.date_field :keeping_date, class: "form-control" %>
    </div>
    <%= form.label "Time:", class: "control-label col-sm-1" %>
    <div class="col-sm-5">
      <%= form.time_field :keeping_time, class: "form-control" %>
    </div>
  </div>
  
  <div class="row d-flex align-items-center mb-4">
    <%= form.label "Keeping Type:", class: "control-label col-sm-1" %>
    <div class="col-sm-5">
      <%= form.select :keeping_type, check_type_options, {}, class: "form-control" %>
    </div>
    <%= form.label "User:", class: "control-label col-sm-1" %>
    <div class="col-sm-5">
        <input name ="time_sheet[user_id]" list="brow" class="form-control">
        <datalist id="brow">
          <% User.status_active.each do |user|%>
            <option value="<%= "#{full_name(user)} - #{user.department&.name}" %>" data-value="<%= user.id %>">
          <% end %>
        </datalist>
    </div>
  </div>
  <div class="row">
    <%= form.submit "Save", class: "btn btn-primary waves-effect waves-light ml-4" %>
  </div>
<% end %>