<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4"><%= t('sessions.login_title') %></h1>
                </div>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "user" }) do |f| %>
                    <%= f.hidden_field :reset_password_token %>

                    <div class="form-group">
                      <input autofocus="autofocus" autocomplete="new-password" class="form-control form-control-user" type="password" name="user[password]" id="user_password"
                      placeholder="<%= t('sessions.new_password') %>">
                    </div>

                    <div class="form-group">
                      <input autocomplete="new-password" type="password" class="form-control form-control-user" name="user[password_confirmation]" id="user_password_confirmation"
                      placeholder="<%= t('sessions.confirm_password') %>">
                    </div>

                    <div class="actions">
                      <input type="submit" name="commit" class="btn btn-primary btn-user btn-block" value="<%= t('sessions.change_my_password') %>" data-disable-with="Change my password">
                    </div>
                  <% end %>
                <hr>
                <div class="text-center">
                    <a class="small" href="/users/sign_in"><%= t('sessions.login') %></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
