<div class="container">

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Forgot Password!</h1>
                </div>
                <form class="user" action="/users/password" id="new_user" accept-charset="UTF-8" method="post">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <div class="form-group">
                        <input name="user[email]" type="email" class="form-control form-control-user"
                            id="exampleInputEmail" aria-describedby="emailHelp"
                            placeholder="Enter Email Address...">
                    </div>
                    <input name="commit" type="submit" class="btn btn-primary btn-user btn-block" value="Send me reset password instructions" data-disable-with="Log in">
                </form>
                <hr>
                <div class="text-center">
                    <a class="small" href="/users/sign_in">Log in</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
