<%= form_with(url: leader_leave_request_path(id: leave_request.id), method: 'patch', html: { class: "d-inline " }) do |form| %>
  <%= form.hidden_field :status, value: status %>
  <%= form.submit I18n.t("leave_requests.actions.#{status}"), class: "btn btn-#{status.eql?("approve") ? 'success' : 'danger'} waves-effect waves-light ml-4 actionOneLeave" %>
<% end %>