<!-- Logout Modal-->
<div class="modal fade" id="<%= leave_request.id ?  "updateLeaveRequest#{leave_request.id}" : "leaveRequestForm" %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content p-4">
      <%= form_with(model: leave_request, html: { class: "form-horizontal",  data: {confirm: 'Are You Sure'}  }) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Leave Request</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row d-flex align-items-center">
            <%= form.label "leave_type:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.select :leave_type, leave_type_options, {}, class: "form-control" %>
          </div>

          <div class="row d-flex align-items-center">
            <%= form.label "start_time:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.datetime_field :start_date, class: "form-control" %>
          </div>

          <div class="row d-flex align-items-center">
            <%= form.label "end_time:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.datetime_field :end_date, class: "form-control" %>
          </div>

          <div class="row d-flex align-items-center">
            <%= form.label "approve_by:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.select :approve_by, leader_options, {}, class: "form-control" %>
          </div>

          <div class="row d-flex align-items-center">
            <%= form.label "reason:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.text_area :reason, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <%= form.submit "Save",class: "btn btn-primary waves-effect waves-light ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>