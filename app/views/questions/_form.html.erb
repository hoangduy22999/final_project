<!-- Logout Modal-->
<div class="modal fade" id="<%= question.id ?  "updateHoliday#{question.id}" : "questionForm" %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content p-4">
      <%= form_with(model: question, html: { class: "form-horizontal" }) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Holiday</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row d-flex align-items-center">
            <%= form.label "question:", class: "control-label" %>
          </div>
          <div class="row d-flex align-items-center mb-3">
            <%= form.text_field :content, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <%= form.submit "Save", class: "btn btn-primary waves-effect waves-light ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

