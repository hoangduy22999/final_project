<!-- DataTales Example -->
<form action="answers" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search w-50" method="get">
  <div class="input-group">
    <input name="where[content_cont]" type="text" class="form-control bg-light border-0 small mr-4" placeholder="Content" aria-label="Search" aria-describedby="basic-addon2"
    value="<%= params[:where][:content_cont] if params[:where].present? %>">
    <div class="input-group-append">
      <button class="btn btn-primary" type="submit">
        <i class="fas fa-search fa-sm"></i>
      </button>
    </div>
  </div>
</form>
<div class="table-responsive mt-3">
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
          <tr>
              <th>Id</th>
              <th>Content</th>
              <th>Answers</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody>
        <% @questions.each.with_index(1) do |question, index| %>
          <tr>
            <td><%= (question.id > 9 ? "0000" : "00000") + question.id.to_s %></td>
            <td><%= link_to question.content, new_answer_path(question.id) %></td>
            <td><%= question.answers.count %></div></td>
            <td>
              <div class="text-center">
                <a href="questions/<%= question.id %>" class="actionLink mr-3" title="Edit"><i class="fa-regular fa-pen-to-square text-success"></i></a>
                <a href="questions/<%= question.id %>" class="actionLink" title="Remove" data-confirm="Are you want to delete this question?" data-method="delete">
                  <i class="fa-solid fa-trash text-danger"></i>
                </a>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
  <%= will_paginate @questions %>
</div>
