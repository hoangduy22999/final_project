<!-- DataTales Example -->
<div class="row">
  <div class="col-sm-6">
    <form action="answers" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search w-50" method="get">
      <div class="input-group">
        <input name="where[content_cont]" type="text" class="form-control bg-light border-0 small mr-4" placeholder="Content" aria-label="Search" aria-describedby="basic-addon2"
        value="<%= params[:where][:content_cont] if params[:where].present? %>">
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-search fa-sm"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-sm-6">
    <button class="btn btn-primary ml-md-3 my-2 my-md-0" href="#" data-toggle="modal" data-target="#questionForm" style="width: 100px;">
      <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
      Add
    </button>
  </div>
  <%= render 'form', question: Question.new %>
</div>
<div class="table-responsive mt-3">
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
      <thead>
          <tr>
              <th>Id</th>
              <th>Content</th>
              <th>Answers</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody>
        <% @questions.each.with_index(1) do |question, index| %>
          <tr>
            <td><%= (question.id > 9 ? "0000" : "00000") + question.id.to_s %></td>
            <td><%= link_to question.content, questions_path(question) %></td>
            <td><%= question.answers.count %></div></td>
            <td>
              <div class="text-center">
                <a class="actionLink mr-3" title="Edit" data-toggle="modal" data-target="#updateQuestion<%= question.id %>"><i class="fa-regular fa-pen-to-square text-success"></i></a>
                <a href="questions/<%= question.id %>" class="actionLink" title="Remove" data-confirm="Are you want to delete this question?" data-method="delete">
                  <i class="fa-solid fa-trash text-danger"></i>
                </a>
                <%= render 'form', question: question %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
  <%= will_paginate @questions %>
</div>
