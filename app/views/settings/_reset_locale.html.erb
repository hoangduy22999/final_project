<%= form_with(model: current_user, url: "settings/reset_preferred_locale", html: { class: "form-horizontal" }) do |form| %>
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <i><b><%= t('settings.language_title') %></b></i>
      <hr class="hr" /><br>
      <div class="row d-flex align-items-center mb-4">
        <%= form.label I18n.t('settings.language'), class: "control-label col-sm-2" %>
        <div class="col-sm-5">
          <%= form.select :preferred_locale, language_options, {},  { class: "form-control" } %>
        </div>
      </div>
      <div class="row">
        <%= form.submit "Save", class: "btn btn-primary waves-effect waves-light ml-4" %>
      </div>
    </div>
  </div>
<% end %>