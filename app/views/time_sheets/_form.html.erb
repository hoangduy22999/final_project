<%= form_with(url: "/time_sheets/#{time_sheet.id}", model: time_sheet, html: { class: "form-horizontal" }) do |form| %>
  <% if time_sheet.start_at && time_sheet.end_at %>
    <%= form.submit I18n.t('form_buttons.check_out'), class: "btn btn-danger waves-effect waves-light ml-4", disabled: true %>
  <% elsif time_sheet.start_at %>
    <%= form.hidden_field :field_name, value: "check_out" %>
    <%= form.submit I18n.t('form_buttons.check_out'), class: "btn btn-danger waves-effect waves-light ml-4" %>
  <% else %>
    <%= form.hidden_field :field_name, value: "check_in" %>
    <%= form.submit I18n.t('form_buttons.check_in'), class: "btn btn-primary waves-effect waves-light ml-4" %>
  <% end %>
<% end %>